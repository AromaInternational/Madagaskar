Imports SMARTtBR_DAImports SMARTtBR_BOImports SMARTtBR_BL.CommonBLImports SMARTtBR_CO.CommonClassPublic Class DesignationBL    Private M_DesID As Integer    Public Function Save_Data(ByVal M_Designation As DesignationBO, ByVal M_EntryMode As String, ByVal M_MenuID As Integer) As Integer        Try            Dim M_DesignationDA As New DesignationDA            Dim UserTime As String            If CheckUserRight(M_EntryMode, M_Designation.MakerID, M_MenuID) = True Then                UserTime = Get_UserTime()                M_DesID = M_DesignationDA.Save_Data(M_Designation, M_EntryMode, M_MenuID, UserTime)                M_DesignationDA = Nothing                Return M_DesID            Else                Return 0            End If        Catch ex As Exception            Return 0        End Try    End Function    Public Function Locate_Data(ByVal M_DesID As Integer) As DesignationBO        Try            Dim M_DesignationDA As New DesignationDA            Return M_DesignationDA.Locate_Data(M_DesID)            M_DesignationDA = Nothing        Catch ex As Exception            Return Nothing        End Try    End Function    Public Function Fill_Grid(ByVal M_Object As Object) As Boolean        Try            Dim M_DataTable As DataTable            Dim M_DesignationDA As New DesignationDA            M_DataTable = M_DesignationDA.Fill_Grid()            M_Object.DataSource = M_DataTable            M_DesignationDA = Nothing            Return False        Catch ex As Exception            Return Nothing        End Try    End Function    Public Function Check_DesignationNameExists(ByVal DepName As String, Optional ByVal M_DesID As Integer = 0) As Boolean        Try            Dim M_Return As Boolean            Dim M_DesignationDA As New DesignationDA            M_Return = M_DesignationDA.Check_DesignationNameExists(DepName, M_DesID)            M_DesignationDA = Nothing            Return M_Return        Catch ex As Exception            Return Nothing        End Try    End FunctionEnd Class